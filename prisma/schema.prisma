// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo{
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User{
  id      Int      @id @default(autoincrement())
  email  String   @unique
  password String
  role    RoleStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


enum RoleStatus {
  client
  owner
  delivery
}